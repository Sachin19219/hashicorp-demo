{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}"
  },

  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "source_ami": "ami-2051294a",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ami_name": "infrastructure_{{isotime \"2006/01/02_15h04m05s\"}}",
      "ssh_pty" : true
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/install_chefdk.sh"
    },
    {
      "type": "chef-solo",
      "cookbook_paths": ["cookbooks","cookbooks/berks-cookbooks"],
      "run_list": ["git","java","tomcat"]
    },
    {
      "type": "file",
      "source": "tests",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "script": "scripts/serverspec.sh"
    }
  ]
}
